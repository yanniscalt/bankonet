	private String creerIntitule(String nom, String prenom){
		
		StringBuilder ch = new StringBuilder();
		ch.append(nom.toUpperCase());
		ch.append("_");
		ch.append(prenom.toUpperCase());
		ch.append("_COURANT_");
		nbcompte++;
		ch.append(nbcompte);
		
		return ch.toString();		
	
	}
