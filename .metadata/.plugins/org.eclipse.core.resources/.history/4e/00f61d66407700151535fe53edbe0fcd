package ihm;

import java.util.Iterator;
import java.util.List;

import factory.Client;
import metier.ClientService;

public class ListAllClient extends IhmCommand {

	private ClientService clientService;
	
	
	public ListAllClient(ClientService clientService) {
		super();
		this.clientService = clientService;
	}

	@Override
	public Integer getId() {
		// TODO Auto-generated method stub
		return 3;
	}

	@Override
	public String getLibelle() {
		// TODO Auto-generated method stub
		return "Lister tous les clients";
	}

	@Override
	void Execute() {
		List<Client> listclient = (List<Client>) clientService.findAll();
		
		Iterator<Client> iterator = listclient.iterator();
		while (iterator.hasNext()) {
		Client client = (Client) iterator.next();
		System.out.println(client.toString());
		}
		
	}

}
