package ihm;

import java.util.Scanner;

import metier.ClientService;

public class RechercheClientPrenom extends IhmCommand {
private ClientService clientService;
	
	
	public RechercheClientPrenom(ClientService clientService) {
		super();
		this.clientService = clientService;
	}

	@Override
	public Integer getId() {
		
		return 5;
	}

	@Override
	public String getLibelle() {
		// TODO Auto-generated method stub
		return "Rechercher un client à partir du Prenom";
	}

	@Override
	void Execute() {
		Scanner sc = new Scanner(System.in);
		String Prenom;
		
		System.out.println("Saisissez le Prenom");
		Prenom = sc.nextLine();
		
		Client client = clientService.findClientPrenom(Prenom);
		System.out.println(client.toString());
		
	}
}
